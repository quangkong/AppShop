<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.seller.AddPromotionCode">

    <RelativeLayout
        android:id="@+id/rlToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect01">
        <ImageView
            android:id="@+id/imgBack"
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_white" />
        <TextView
            android:id="@+id/txtToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Promotion Code"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"/>

    </RelativeLayout>


    <ImageView
        android:id="@+id/imgAvt"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/rlToolBar"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/logoo"/>

    <EditText
        android:id="@+id/edtPromoCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rect02"
        android:drawableStart="@drawable/ic_discount_gray"
        android:drawablePadding="5dp"
        android:hint="Promotion Code"
        android:padding="10dp"
        android:inputType="textCapWords"
        android:textColor="@color/black"
        android:textColorHint="@color/colorGray02"
        android:layout_below="@+id/imgAvt"/>
    <EditText
        android:id="@+id/edtPromoDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rect02"
        android:drawableStart="@drawable/ic_discount_gray"
        android:drawablePadding="5dp"
        android:hint="Promotion Description"
        android:padding="10dp"
        android:inputType="textCapSentences|textMultiLine"
        android:textColor="@color/black"
        android:textColorHint="@color/colorGray02"
        android:layout_below="@+id/edtPromoCode"/>
    <EditText
        android:id="@+id/edtPromoPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rect02"
        android:drawableStart="@drawable/ic_money_gray"
        android:drawablePadding="5dp"
        android:hint="Promotion Price"
        android:padding="10dp"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:textColorHint="@color/colorGray02"
        android:layout_below="@+id/edtPromoDescription"/>
    <EditText
        android:id="@+id/edtMinimunOrderPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rect02"
        android:drawableStart="@drawable/ic_discount_gray"
        android:drawablePadding="5dp"
        android:hint="Minimun Order Price"
        android:padding="10dp"
        android:inputType="textCapWords"
        android:textColor="@color/black"
        android:textColorHint="@color/colorGray02"
        android:layout_below="@+id/edtPromoPrice"/>

    <TextView
        android:id="@+id/txtExpireDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rect02"
        android:drawableStart="@drawable/ic_calendar_gray"
        android:drawablePadding="5dp"
        android:hint="Expire Data"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textColorHint="@color/colorGray02"
        android:layout_below="@+id/edtMinimunOrderPrice"/>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="ADD CODE"
        android:background="@drawable/shape_rect_button"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/txtExpireDate"/>


</RelativeLayout>
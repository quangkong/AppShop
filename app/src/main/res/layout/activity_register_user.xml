<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.RegisterUser"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_rect01">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_white"
            android:id="@+id/imgBack"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register User"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iconKey"
        android:background="@drawable/shape_circle01"
        android:src="@drawable/ic_key_white"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_marginBottom="20dp" />

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:layout_below="@+id/iconKey"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/iconAvt"
        android:layout_centerHorizontal="true"
        app:c_border="true"
        android:layout_marginBottom="20dp"
        app:c_border_color="@color/colorPrimary"
        app:c_border_width="1dp"
        android:src="@drawable/ic_person_gray"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:drawableStart="@drawable/ic_person_gray"
        android:layout_below="@+id/iconAvt"
        android:id="@+id/edtFullName"
        android:layout_margin="5dp"
        android:drawablePadding="5dp"
        android:background="@drawable/shape_rect02"
        android:padding="5dp"
        android:inputType="textPersonName|textCapWords"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:drawableStart="@drawable/ic_phone_gray"
        android:layout_below="@+id/edtFullName"
        android:id="@+id/edtPhone"
        android:layout_margin="5dp"
        android:drawablePadding="5dp"
        android:background="@drawable/shape_rect02"
        android:padding="5dp"
        android:inputType="phone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Complete Address"
        android:drawableStart="@drawable/ic_location_gray"
        android:layout_below="@+id/edtPhone"
        android:id="@+id/edtAddress"
        android:layout_margin="5dp"
        android:drawablePadding="5dp"
        android:background="@drawable/shape_rect02"
        android:padding="5dp"
        android:inputType="textPostalAddress|textMultiLine"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:drawableStart="@drawable/ic_mail_gray"
        android:layout_below="@+id/edtAddress"
        android:id="@+id/edtEmail"
        android:layout_margin="5dp"
        android:drawablePadding="5dp"
        android:background="@drawable/shape_rect02"
        android:padding="5dp"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:drawableStart="@drawable/ic_lock_gray"
        android:layout_below="@+id/edtEmail"
        android:id="@+id/edtPassword"
        android:layout_margin="5dp"
        android:drawablePadding="5dp"
        android:background="@drawable/shape_rect02"
        android:padding="5dp"
        android:inputType="textPassword" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comfirm Password"
        android:drawableStart="@drawable/ic_lock_gray"
        android:layout_below="@+id/edtPassword"
        android:id="@+id/edtComfirmPassword"
        android:layout_margin="5dp"
        android:drawablePadding="5dp"
        android:background="@drawable/shape_rect02"
        android:padding="5dp"
        android:inputType="textPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Regiter"
        android:id="@+id/btnRegiter"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/shape_rect_button"
        android:textColor="@color/white"
        android:layout_below="@+id/edtComfirmPassword"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:minWidth="120dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are seller? Regiter Seller now"
        android:textColor="@color/colorGray01"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/txtRegisterSeller"/>

</RelativeLayout>